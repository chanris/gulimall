<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chanris.gulimall.product.dao.AttrAttrgroupRelationDao">

    <resultMap type="com.chanris.gulimall.product.entity.AttrAttrgroupRelationEntity" id="attrAttrgroupRelationMap">
        <result property="id" column="id"/>
        <result property="attrId" column="attr_id"/>
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrSort" column="attr_sort"/>
    </resultMap>

    <delete id="deleteByAttrIdAndAttrGroupId">
        delete from pms_attr_attrgroup_relation where attr_id = #{attrId} and attr_group_id = #{attrGroupId}
    </delete>


    <delete id="deleteByAttrGroupIds">
        delete from pms_attr_attrgroup_relation
        where pms_attr_attrgroup_relation.attr_group_id in
        <foreach collection="list" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>

    <delete id="deleteByAttrIds">
        delete from pms_attr_attrgroup_relation
        where pms_attr_attrgroup_relation.attr_id in
        <foreach collection="list" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>
    <!-- 注意：一个属性只能绑定一个分组, 但一个分组可以绑定多个属性-->
    <update id="updateByAttrId" parameterType="com.chanris.gulimall.product.dto.AttrDTO">
        update pms_attr_attrgroup_relation set attr_group_id = #{attrGroupId} where attr_id = #{attrId}
    </update>

</mapper>