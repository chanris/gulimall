<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chanris.gulimall.product.dao.CategoryBrandRelationDao">

    <resultMap type="com.chanris.gulimall.product.entity.CategoryBrandRelationEntity" id="categoryBrandRelationMap">
        <result property="id" column="id"/>
        <result property="brandId" column="brand_id"/>
        <result property="catelogId" column="catelog_id"/>
        <result property="brandName" column="brand_name"/>
        <result property="catelogName" column="catelog_name"/>
    </resultMap>

    <delete id="deleteBatchByCategoryIds">
        delete from pms_category_brand_relation
        where pms_category_brand_relation.catelog_id in
        <foreach collection="list" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>

    <delete id="deleteBatchByBrandIds">
        delete from pms_category_brand_relation
        where pms_category_brand_relation.brand_id in
        <foreach collection="list" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>
</mapper>