<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chanris.gulimall.ware.dao.PurchaseDetailDao">

    <resultMap type="com.chanris.gulimall.ware.entity.PurchaseDetailEntity" id="purchaseDetailMap">
        <result property="id" column="id"/>
        <result property="purchaseId" column="purchase_id"/>
        <result property="skuId" column="sku_id"/>
        <result property="skuNum" column="sku_num"/>
        <result property="skuPrice" column="sku_price"/>
        <result property="wareId" column="ware_id"/>
        <result property="status" column="status"/>
    </resultMap>


    <update id="merge" parameterType="com.chanris.gulimall.ware.vo.MergeVo">
        update wms_purchase_detail set purchase_id = #{vo.purchaseId}, `status` = 1
        where id in
        <foreach collection="vo.items" item="item" open="(" close=")" separator=",">#{item}</foreach>
    </update>
</mapper>