<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chanris.gulimall.ware.dao.WareSkuDao">

    <resultMap type="com.chanris.gulimall.ware.entity.WareSkuEntity" id="wareSkuMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="wareId" column="ware_id"/>
        <result property="stock" column="stock"/>
        <result property="skuName" column="sku_name"/>
        <result property="stockLocked" column="stock_locked"/>
    </resultMap>

    <resultMap id="SkuHasStockVoMap" type="com.chanris.gulimall.ware.vo.SkuHasStockVo">
        <result property="skuId" column="sku_id"/>
        <result property="hasStock" column="stock" typeHandler="org.apache.ibatis.type.BooleanTypeHandler"/>
    </resultMap>

    <select id="getSkuHasStock" resultMap="SkuHasStockVoMap">
        select ws.sku_id, sum(ws.stock - ws.stock_locked) as stock from wms_ware_sku ws where sku_id in
            <foreach collection="skuIds" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        group by ws.sku_id
    </select>

    <select id="listWareIdHasSkuStock" parameterType="long"  resultType="long">
        select ware_id from wms_ware_sku where sku_id = #{skuId} and stock - wms_ware_sku.stock_locked > 0
    </select>

    <update id="lockSkuStock">
        update wms_ware_sku set stock_locked = stock_locked + #{num}
        where sku_id = #{skuId} and ware_id = #{wareId} and stock - stock_locked >= #{num}
    </update>

    <update id="unLockStock">
        update wms_ware_sku set stock_locked = stock_locked - #{num} where sku_id = #{skuId} and ware_id = #{wareId}
    </update>
</mapper>